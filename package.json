{
  "name": "pnpm-update-bisect",
  "version": "0.2.1",
  "description": "It's like the npm-check-updates \"doctor\" mode made for the pnpm update command, only faster",
  "exports": "./dist",
  "scripts": {
    "dev": "run-p compile:watch start:watch",
    "lint": "eslint src",
    "prepare": "tsc",
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "start": "node .",
    "start:watch": "nodemon -w dist/ .",
    "test": "tsc",
    "release": "pnpm outdated && np"
  },
  "author": "David Rolle <miridius@miridi.us>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^20.12.5",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^3.1.0",
    "np": "^10.0.3",
    "npm-run-all": "^4.1.5",
    "pnpm-update-bisect": "^0.2.1",
    "prettier": "^3.2.5",
    "typescript": "^5.4.4"
  },
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "files": [
    "dist/*"
  ],
  "bin": {
    "pnpm-update-bisect": "dist/index.js",
    "pub": "dist/index.js"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 90
  }
}

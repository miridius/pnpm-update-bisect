{
  "name": "pnpm-update-bisect",
  "version": "0.1.1",
  "description": "It's like the npm-check-updates \"doctor\" mode made for the pnpm update command, only faster",
  "main": "dist",
  "scripts": {
    "dev": "run-p compile:watch start:watch",
    "lint": "eslint src",
    "prepare": "tsc",
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "start": "node .",
    "start:watch": "nodemon -w dist/ .",
    "test": "echo TODO",
    "release": "pnpm outdated && np"
  },
  "author": "David Rolle <miridius@miridi.us>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "execa": "^5.1.1"
  },
  "devDependencies": {
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^18.19.30",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "nodemon": "^2.0.14",
    "np": "^7.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "typescript": "^5.4.4"
  },
  "type": "module",
  "engines": {
    "node": "^18"
  },
  "files": [
    "dist/*"
  ],
  "bin": {
    "pnpm-update-bisect": "dist/index.js",
    "pub": "dist/index.js"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 90
  }
}
